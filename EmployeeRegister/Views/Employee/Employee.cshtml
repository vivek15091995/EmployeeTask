@model EmployeeRegister.Models.EmployeeModel

@{
    ViewBag.Title = "Employee";
}
<style>
    .errorMsg {
        color: red;
    }
</style>

<script>
    $(document).ready(function () {
        var datetimefordob = $("#DOB").attr("value");
        $("#DOB").val(datetimefordob);
    });
</script>

@using (Html.BeginForm("AddEmployee", "Employee", FormMethod.Post))
{

    <div class="form-group">
        @if (Model != null)
        {
            @Html.HiddenFor(x => x.EmpId)
        }

        <label>First Name</label>
        @Html.ValidationMessageFor(x => x.Firstname, "", new { @class = "errorMsg" })
        @Html.TextBoxFor(x => x.Firstname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Last Name</label>
        @Html.ValidationMessageFor(x => x.Lastname, "", new { @class = "errorMsg" })
        @Html.TextBoxFor(x => x.Lastname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "errorMsg" })
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Date of Birth</label>
        @Html.ValidationMessageFor(x => x.DOB, "", new { @class = "errorMsg" })
        @if (Model != null)
        {
            @Html.EditorFor(x => x.DOB, new { htmlAttributes = new { @class = "form-control", @Value = Model.DOB.ToString("yyyy-MM-dd") } })
        }
        else
        {
            @Html.EditorFor(x => x.DOB, new { htmlAttributes = new { @class = "form-control" } })
        }
    </div>
    <div class="form-group">
        <label>Employee Tag</label>
        @Html.ValidationMessageFor(x => x.EmpTag, "", new { @class = "errorMsg" })
        @Html.TextBoxFor(x => x.EmpTag, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Designation</label>

        @Html.DropDownListFor(x => x.DesignationId, new SelectList(ViewBag.designations, "DesignationId", "DesignationName"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Depatment</label>

        @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.departments, "DepartmentId", "DepartmentName"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>


}
